<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notVerified"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration"
    android:visibility="visible"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/reg_email"
        android:layout_width="311dp"
        android:layout_height="41dp"
        android:layout_marginTop="292dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:hint="Enter the Email address"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="311dp"
        android:layout_height="41dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:hint="Enter the password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/reg_loging_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_id" />

    <Button
        android:id="@+id/reg_loging_btn"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="58dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass" />

    <TextView
        android:id="@+id/already"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="44dp"
        android:text="Already registered? Sign in"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_loging_btn" />

    <EditText
        android:id="@+id/signup_id"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/edit_shape"
        android:ems="10"
        android:hint="Enter your student ID"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_email" />

    <TextView
        android:id="@+id/notVerify"
        android:layout_width="298dp"
        android:layout_height="36dp"
        android:text="Not Verified!"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="163dp" />

    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Now"
        android:textStyle="italic"
        android:visibility="gone"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="214dp" />

</androidx.constraintlayout.widget.ConstraintLayout>